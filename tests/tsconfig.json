{
  "ts-node": {
    "files": true,
  },
  "compilerOptions": {
    "module": "es2022",
    "target": "es2017",
    "sourceMap": false,
    "inlineSources": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowImportingTsExtensions": true,
    "noEmit": true,
  },
  "lib": ["esnext", "es2022", "es2017"],
  "include": ["tests/**/*.ts"],
  "files": ["tests/global.d.ts"],
}
